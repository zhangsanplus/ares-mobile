{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["es2020", "dom"],
    "typeRoots": ["./node_modules/@types/", "./types/"],
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["dist", "test", "node_modules"]
}
