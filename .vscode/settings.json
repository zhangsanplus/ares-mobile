{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "prettier.enable": false,
  "npm.packageManager": "pnpm",
  "local-history.enabled": 0,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ],
  "eslint.rules.customizations": [
    {
      "severity": "off",
      "rule": "style/*"
    },
    {
      "severity": "off",
      "rule": "*-indent"
    },
    {
      "severity": "off",
      "rule": "*-spacing"
    },
    {
      "severity": "off",
      "rule": "*-spaces"
    },
    {
      "severity": "off",
      "rule": "*-order"
    },
    {
      "severity": "off",
      "rule": "*-dangle"
    },
    {
      "severity": "off",
      "rule": "*-newline"
    },
    {
      "severity": "off",
      "rule": "*quotes"
    },
    {
      "severity": "off",
      "rule": "*semi"
    }
  ],
  "eslint.experimental.useFlatConfig": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": "explicit"
  },
  "cSpell.words": [
    "Attributify",
    "bumpp",
    "Customizer",
    "eruda",
    "iconify",
    "kolorist",
    "taze",
    "unocss",
    "vant",
    "Windi",
    "zhangsanplus"
  ]
}
